@model test.Models.MedicalRecord
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Medical Record Details";
    var currentUserId = UserManager.GetUserId(User);
    var isOwner = Model.Animal != null && Model.Animal.Userid == currentUserId;
}

<section class="theme-section">
    <div class="container">
        <div class="theme-header">
            <h1 class="theme-title">
                <i class="fas fa-notes-medical"></i> Medical Record
            </h1>
            <p class="theme-subtitle">Health details and vaccination history</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Health Status Card -->
                <div class="theme-card mb-4">
                    <div class="card-header bg-transparent border-0 pt-4 px-4">
                        <h3 class="card-title mb-0"><i class="fas fa-heartbeat me-2"></i>Health Status</h3>
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold text-muted">Status</div>
                            <div class="col-sm-8">
                                @if (Model.Status == "Healthy")
                                {
                                    <span class="badge bg-success rounded-pill px-3">Healthy</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill px-3">@Model.Status</span>
                                }
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Injurys))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 fw-bold text-muted">Injuries/Notes</div>
                                <div class="col-sm-8">
                                    <p class="mb-0">@Model.Injurys</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Vaccinations Card -->
                <div class="theme-card">
                    <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0"><i class="fas fa-syringe me-2"></i>Vaccinations</h3>
                        @if (isOwner)
                        {
                            <a asp-controller="VaccinationNeeded" asp-action="Create" asp-route-medicalid="@Model.Recordid" class="btn btn-sm btn-outline-primary rounded-pill">
                                <i class="fas fa-plus"></i> Add
                            </a>
                        }
                    </div>
                    <div class="card-body p-4">
                        @if (Model.VaccinationNeededs != null && Model.VaccinationNeededs.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var vaccine in Model.VaccinationNeededs)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-3"></i>
                                            <span class="fw-medium">@vaccine.VaccineName</span>
                                        </div>
                                        @if (isOwner)
                                        {
                                            <a asp-controller="VaccinationNeeded" asp-action="Delete" asp-route-id="@vaccine.Id" class="btn btn-sm btn-link text-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="fas fa-syringe fa-2x mb-2 opacity-50"></i>
                                <p>No vaccinations recorded yet.</p>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-4 text-center">
                    @if (User.IsInRole("User"))
                    {
                        <a asp-controller="Animal" asp-action="Index" asp-route-mine="true" class="btn btn-link text-muted">
                            <i class="fas fa-arrow-left me-2"></i>Back to My Animals
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Shelter" asp-action="Index" asp-route-view="animals" class="btn btn-link text-muted">
                            <i class="fas fa-arrow-left me-2"></i>Back to Animals
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
