@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        
</head>
<body>
    <header>
               <nav class="navbar">
            <!-- Make the logo clickable -->
            <a asp-controller="home" asp-action="Index" class="logo">HappyPaws Haven</a>
            <ul class="nav-links">
                @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                {
                    <li><a asp-controller="animal" asp-action="Index" >Animal list</a></li>
                    <li><a asp-controller="Request" asp-action="Index" >Requests</a></li>
                    <li><a asp-controller="Shelter" asp-action="UserView">Shelters</a></li>
                    <li><a asp-controller="account" asp-action="logout" class="login">Log Out</a></li>
                }
                else
                {
                <li><a asp-controller="account" asp-action="login" class="login">Log In</a></li>
                <li><a asp-controller="account" asp-action="register">Register</a></li>
                }
            </ul>
            <div class="menu-toggle">&#9776;</div>
        </nav>
    </header>
    
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <p>&copy; 2025 HappyPaws Haven. All rights reserved.</p>
            <ul class="socials">
                <li><a href="#">Facebook</a></li>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
            </ul>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>