@using test.ViewModels
@model EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<section class="theme-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Edit Product</h1>
            <p class="form-description">Update product details</p>
        </div>
        <form asp-action="Edit" method="post" class="animal-form">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label class="form-label">Product Type</label>
                <input asp-for="Type" type="text" class="form-input" placeholder="e.g., Food, Toys, Accessories" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-input" placeholder="Enter product price" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-input" placeholder="Enter product quantity" step="1" min="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Description</label>
                <input asp-for="Disc" type="text" class="form-input" placeholder="Enter product description" />
                <span asp-validation-for="Disc" class="text-danger"></span>
            </div>
            <button type="submit" class="theme-cta">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
            <a asp-action="Index" class="btn btn-link mt-3">Cancel</a>
        </form>
    </div>
</section>
