@model test.Models.Product
@{
    ViewData["Title"] = "Add Product";
}


<div class="create-container">
    <div class="floating-paws">
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
    </div>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="create-card">
                    <div class="create-header">
                        <h1 class="create-title">
                            <i class="fas fa-paw paw-icon"></i>Add New Product
                        </h1>
                        <p class="create-subtitle">Help pet owners find the perfect products</p>
                    </div>
                    
                    <form action="Create" method="post">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-tag me-2"></i>Product Type
                            </label>
                            <div class="input-group">
                                <i class="fas fa-box input-icon"></i>
                                <input asp-for="Type" type="text" class="form-control with-icon" placeholder="e.g., Food, Toys, Accessories, etc." />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>Price
                            </label>
                            <div class="input-group">
                                <i class="fas fa-money-bill-wave input-icon"></i>
                                <input asp-for="Price" type="number" class="form-control with-icon" placeholder="Enter product price" step="0.01" min="0" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-align-left me-2"></i>Description
                            </label>
                            <div class="input-group">
                                <i class="fas fa-file-text input-icon"></i>
                                <input asp-for="Disc" type="text" class="form-control with-icon" placeholder="Enter product description" />
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-create">
                            <i class="fas fa-plus me-2"></i>Add Product
                        </button>
                        
                        <a asp-controller="Shelter" asp-action="Index" class="btn btn-cancel">
                            <i class="fas fa-arrow-left me-2"></i>Back to Products List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
