@model List<test.Models.Product>
@{
    var username = ViewBag.Username as string;
    var phonenumber = ViewBag.phonenumber as string;
    var email = ViewBag.email as string;
    ViewData["Title"] = "Shelter Page - " + username;
}

<section class="shelter-hero">
    <div class="shelter-header">
        <div class="shelter-avatar"><i class="fas fa-building"></i></div>
        <div class="shelter-title-wrap">
            <div class="shelter-name">@username</div>
            <div class="shelter-sub">Your trusted pet care partner</div>
            <div class="chip-row">
                <span class="chip"><i class="fas fa-shield-alt"></i> Trusted</span>
                <span class="chip"><i class="fas fa-star"></i> Quality</span>
            </div>
        </div>
    </div>
</section>

<div class="shelter-body">
    <aside>
        <div class="contact-row">
            <div class="contact-card">
                <div class="contact-icon"><i class="fas fa-envelope"></i></div>
                <div class="contact-meta">
                    <div class="contact-label">Email</div>
                    <div class="contact-value">@email</div>
                </div>
            </div>
            <div class="contact-card">
                <div class="contact-icon"><i class="fas fa-phone"></i></div>
                <div class="contact-meta">
                    <div class="contact-label">Phone</div>
                    <div class="contact-value">@(string.IsNullOrEmpty(phonenumber) ? "Not provided" : phonenumber)</div>
                </div>
            </div>
        </div>
    </aside>

<section class="theme-section shelter-content">
    <div class="container">
        <div class="section-bar">
            <div>
                <div class="section-title"><i class="fas fa-shopping-bag"></i> Available Products</div>
                
            </div>
            <div class="count-pill"><i class="fas fa-box"></i>@Model.Count() Products</div>
        </div>
        <div class="theme-grid products-grid">
            @if (Model == null || !Model.Any())
            {
                <div class="theme-empty-wrap">
                    <div class="theme-empty">
                        <div class="icon"><i class="fas fa-box-open"></i></div>
                        <div class="title">No Products Available</div>
                        <div class="msg">This shelter hasn't added any products yet. Check back later!</div>
                    </div>
                </div>
            }
            else
            {
                @foreach(var product in Model)
                {
                    <div class="theme-card">
                        <div class="product-hero">
                            <div class="title">@product.Type</div>
                        </div>
                        <div class="product-desc truncate-2">@product.Disc</div>
                        <div class="card-actions" style="display:flex; justify-content:space-between; align-items:center;">
                            <span class="price-pill"><i class="fas fa-dollar-sign"></i>$@product.Price</span>
                            <a class="theme-cta"><i class="fas fa-box"></i>Buy</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>