@model test.ViewModels.ShelterIndexViewModel
@{
    ViewData["Title"] = "My Shelter";
    var currentView = Context.Request.Query["view"].ToString();
    if (string.IsNullOrEmpty(currentView))
    {
        currentView = "products";
    }
}

<section class="theme-section">
    <div class="container">
        <div class="theme-header">
            <h1 class="theme-title">
                <i class="fas fa-home"></i> My Shelter
            </h1>
            <p class="theme-subtitle">Manage your products and animals in one place</p>
            
            <!-- Tabs -->
            <div class="header-actions d-flex flex-column align-items-center gap-3 mt-4">
                <div class="btn-group shadow-sm rounded-pill" role="group" aria-label="View Toggle">
                    <a asp-action="Index" asp-route-view="products" class="animal-tab @(currentView == "products" ? "animal-tab-active" : "") rounded-pill-start px-4">
                        <i class="fas fa-shopping-bag me-2"></i>My Products
                    </a>
                    <a asp-action="Index" asp-route-view="animals" class="animal-tab @(currentView == "animals" ? "animal-tab-active" : "") rounded-pill-end px-4">
                        <i class="fas fa-paw me-2"></i>My Animals
                    </a>
                </div>

                @if (currentView == "products")
                {
                    <a asp-controller="Shelter" asp-action="Create" class="theme-cta mt-3">
                        <i class="fas fa-plus"></i>
                        Add Product
                    </a>
                }
                else
                {
                     <a asp-controller="Animal" asp-action="Create" class="theme-cta mt-3">
                        <i class="fas fa-plus"></i>
                        Add Animal
                    </a>
                }
            </div>
        </div>

        @if (currentView == "products")
        {
            <div class="theme-grid shelter-grid">
                @if (Model.Products == null || Model.Products.Count == 0)
                {
                    <div class="theme-empty-wrap">
                        <div class="theme-empty">
                            <div class="icon">
                                <i class="fas fa-box-open"></i>
                            </div>
                            <div class="title">No products available yet</div>
                            <div class="msg">Be the first to add products for pet owners!</div>
                            <div style="margin-top:12px;">
                                <a asp-controller="Shelter" asp-action="Create" class="theme-cta">
                                    <i class="fas fa-plus"></i>
                                    Add Product
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var product in Model.Products)
                    {
                        <div class="theme-card Shelter-item">
                            <div class="product-hero">
                                <div class="title">@product.Type</div>
                            </div>
                            <div class="product-desc truncate-2">@product.Disc</div>
                            <div class="card-actions" style="display:flex; justify-content:space-between; align-items:center;">
                                <span class="price-pill"><i class="fas fa-dollar-sign"></i>@product.Price</span>
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Productid" class="btn btn-sm btn-outline-secondary rounded-pill"><i class="fas fa-edit"></i> Edit</a>
                                    
                                    <span id="@("deletespan" + product.Productid)">
                                        <button onclick="deleteconfirm('@product.Productid', true)" class="btn btn-sm btn-outline-danger rounded-pill">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </span>
                                    
                                    <span id="@("deleteConfirmSpan" + product.Productid)" style="display:none;">
                                        <div class="d-flex gap-1 align-items-center">
                                            <span class="text-danger small me-1">Sure?</span>
                                            <a asp-action="Delete" asp-route-id="@product.Productid" class="btn btn-danger btn-sm rounded-pill py-0 px-2">Yes</a>
                                            <button onclick="deleteconfirm('@product.Productid', false)" class="btn btn-secondary btn-sm rounded-pill py-0 px-2">No</button>
                                        </div>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="animals-grid" style="margin-top: 20px; padding: 0;">
                @if (Model.Animals == null || !Model.Animals.Any())
                {
                    <div class="theme-empty-wrap">
                        <div class="theme-empty">
                            <div class="icon">
                                <i class="fas fa-paw"></i>
                            </div>
                            <div class="title">No animals listed yet</div>
                            <div class="msg">Start by adding an animal for adoption!</div>
                            <div style="margin-top:12px;">
                                <a asp-controller="Animal" asp-action="Create" class="theme-cta">
                                    <i class="fas fa-plus"></i>
                                    Add Animal
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var animal in Model.Animals)
                    {
                        <div class="animal-card" data-animal-type="@animal.Type">
                            <div class="animal-image-container">
                                <img src="@animal.Photo" alt="@animal.Name" class="animal-image">
                                <div class="animal-type-badge">
                                    <i class="fas fa-paw"></i>
                                    @animal.Type
                                </div>
                            </div>
                            <div class="animal-info">
                                <h3 class="animal-name">@animal.Name</h3>
                                <div class="animal-details">
                                    <div class="animal-detail-item">
                                        <i class="fas fa-calendar-alt"></i>
                                        <span>Age: @animal.Age</span>
                                    </div>
                                    <div class="animal-detail-item">
                                        <i class="fas fa-tag"></i>
                                        <span>@animal.Type</span>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 mt-2">
                                    <a asp-controller="Animal" asp-action="Edit" asp-route-id="@animal.AnimalId" class="btn btn-outline-primary flex-grow-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    @if (animal.MedicalRecords != null && animal.MedicalRecords.Any())
                                    {
                                        <a asp-controller="MedicalRecord" asp-action="Details" asp-route-animalId="@animal.AnimalId" class="btn btn-outline-info flex-grow-1">
                                            <i class="fas fa-notes-medical"></i> Record
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="MedicalRecord" asp-action="Create" asp-route-animalid="@animal.AnimalId" class="btn btn-outline-warning flex-grow-1">
                                            <i class="fas fa-plus-circle"></i> Add Record
                                        </a>
                                    }
                                    <!-- Simple Delete Link for now to match Product style, or could be full delete logic -->
                                    <a asp-controller="Animal" asp-action="Delete" asp-route-id="@animal.AnimalId" class="btn btn-outline-danger flex-grow-1">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</section>
