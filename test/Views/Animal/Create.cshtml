@model test.ModelViews.CreateAnimalViewModel
@{
    ViewData["Title"] = "Add New Animal - HappyPaws Haven";
}

<!-- Add Animal Form Section -->
<section class="add-animal-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Add a New Animal</h1>
            <p class="form-description">Fill in the details below to add a new animal to our shelter 🐾❤️</p>
        </div>

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="animal-form">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Animal Name</label>
                <input type="text" asp-for="Name" class="form-input" placeholder="Enter animal's name" required>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="form-label">Animal Age</label>
                <input type="number" asp-for="Age" class="form-input" placeholder="Enter animal's age" required>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="form-label">Animal type</label>
                <input type="text" asp-for="Type" class="form-input" placeholder="Enter animal's type" required>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="form-label">Animal Picture</label>
                <input type="file" asp-for="Photo" class="form-file-input" required>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-plus"></i>
                Add Animal
            </button>
        </form>
    </div>
</section>
