@using test.ModelViews
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | HappyPaws Haven</title>
</head>
<body>
  <div class="page-wrapper">


    <!-- Main Content -->
    <div class="login-container">
      <div class="login-box">
        <h1>Welcome Back</h1>
        <p class="subtitle">Login to continue</p>
        <form asp-action="login" method="post">
          <div class="input-group">
            <label asp-for="email">Email</label>
                        <input type="email" asp-for="email" placeholder="Enter your email" required>
          </div>
          <div class="input-group">
            <label asp-for="password">Password</label>
                        <input type="password" asp-for="password" placeholder="Enter your password" required>
          </div>
          <button type="submit" class="btn">Login</button>
        </form>
        <p class="signup-link">Don’t have an account? <a asp-action="register">Sign up</a></p>
      </div>
    </div>

  </div>
</body>
</html>
