@using test.ModelViews
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="login-container">
    <div class="floating-paws">
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
        <i class="fas fa-paw paw-float"></i>
    </div>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-card">
                    <div class="login-header">
                        <h1 class="login-title">
                            <i class="fas fa-paw paw-icon"></i>Welcome Back
                        </h1>
                        <p class="login-subtitle">Sign in to your account</p>
                    </div>
                    
                    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
                    
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="username" class="form-label">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input asp-for="username" class="form-control" placeholder="Enter your username" />
                        </div>

                        <div class="form-group">
                            <label asp-for="password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>

                        <button type="submit" class="btn btn-login">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>
                        
                        <a asp-controller="Account" asp-action="Register" class="btn btn-register">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>